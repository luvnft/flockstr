datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model NostrEvent {
  key        Int     @id @default(autoincrement())
  id         String
  kind       Int
  content    String  @default("") @db.Text
  created_at Int
  pubkey     String
  tags       Json    @default("[]")
  sig        String
  d          String?
}
